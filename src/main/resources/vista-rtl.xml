<container>

	<stream id="video" class="stream.io.MJpegImageStream"
		bufferSize="1mb" 
		url="http://download.jwall.org/streams/kapseln-random.mjpeg" />
	<!-- 
		url="http://shuttle.fritz.box/vista-rtl.mjpeg" />
		url="file:/Volumes/RamDisk/laser-whiteboard.mjpeg" />
	    url="file:/Volumes/RamDisk/laser.mjpeg" />
	 -->
	<!-- 
	 -->


	<process input="video">

		<CreateID key="id" />
		<!-- <AddTimestamp /> <stream.image.ParseImageRGB /> -->
		<!-- 
		 -->
		 
		 
		<stream.image.DisplayImage image="data" />

		<!-- 
		<Delay time="15ms" />
		 -->
		<!-- <stream.net.DataTap address="0.0.0.0" port="9100" /> -->
        <stream.image.AverageRGB image="data" />
        
        <stream.MarkPeak2 keys="frame:red:avg" threshold="110" />
        
        <stream.plotter.Plotter title="Overall AverageRGB"
            history="1000"
            keepOpen="true"
            keys="frame:red:avg,frame:blue:avg,frame:green:avg,peak" />
	</process>

</container>
